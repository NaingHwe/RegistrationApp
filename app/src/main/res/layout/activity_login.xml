        <LinearLayout

            android:layout_below="@+id/tv_titleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingLeft="20dp"
            android:paddingRight="20dp">

          <!--app:civ_border_width="2dp"-->

            <EditText
                android:elevation="5dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/username"
                android:drawableTint="#55BA52"
                android:drawableLeft="@drawable/person_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/border_rounded_bg"
                android:imeOptions="actionNext"
                tools:ignore="UnusedAttribute"
                android:drawableStart="@drawable/person_icon" />


            <EditText
                android:elevation="5dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:id="@+id/et_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/password"
                android:drawableTint="#55BA52"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/border_rounded_bg"
                android:imeOptions="actionGo"
                tools:ignore="TextFields,UnusedAttribute"
                android:drawableStart="@drawable/password_icon" />

            <Button
                android:layout_marginBottom="10dp"
                android:elevation="5dp"
                android:id="@+id/btn_sigin"
                android:background="@drawable/border_rounded_bg_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

